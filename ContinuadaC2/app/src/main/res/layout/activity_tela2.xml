<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tela2">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/tv_raca"
        android:textSize="30sp"
        android:id="@+id/et_raca"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/tv_preco"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/et_raca"
        android:id="@+id/et_preco"
        android:inputType="number"
        />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sw_Indicado"
        app:layout_constraintTop_toBottomOf="@id/et_preco"
        android:text="@string/bl_IndicadoCrianca"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_cadastrar"
        app:layout_constraintTop_toBottomOf="@id/sw_Indicado"
        android:layout_marginTop="10dp"
        android:onClick="cadastrarCachorro"
        android:id="@+id/bt_Cadastrar"
        />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/bt_Cadastrar"
        android:id="@+id/iv_cachorroFeliz"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_cachorroFeliz"
        android:id="@+id/tv_cadastrado"
        />


</androidx.constraintlayout.widget.ConstraintLayout>