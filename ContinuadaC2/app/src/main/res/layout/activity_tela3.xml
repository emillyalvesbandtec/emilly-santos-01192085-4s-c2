<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tela3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_qtdCachorrosIndicados"
            android:textSize="20sp"
            android:id="@+id/tv_qtdIndicadosTrue"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/tv_qtdCachorrosIndicados"
            android:id="@+id/tv_qtdIndicadosFalse"
            app:layout_constraintTop_toBottomOf="@id/tv_qtdIndicadosTrue"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/tv_total"
            android:id="@+id/tv_Total"
            app:layout_constraintTop_toBottomOf="@id/tv_qtdIndicadosFalse"
            android:layout_marginTop="10dp"
            />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout_lista"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/tv_Total">

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>